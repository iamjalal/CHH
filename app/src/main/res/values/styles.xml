<resources>
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="ptrHeaderStyle">@style/Widget.Custom.PtrHeader</item>
    </style>

    <style name="MyActionBar"
        parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/chh_green_dark</item>
    </style>

    <style name="Widget.Custom.PtrHeader" parent="android:Widget">
        <item name="ptrProgressBarColor">@color/chh_green</item>
        <item name="ptrProgressBarStyle">outside</item>
        <item name="ptrPullText">Pull to refresh</item>
        <item name="ptrRefreshingText">Loading...</item>
        <item name="ptrReleaseText"></item>
    </style>
</resources>
